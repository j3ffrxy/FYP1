@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#jsUsers').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                pageLength: 20
            });
        });
    </script>

}

@model System.Data.DataRowCollection
<h2> Users </h2>


@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<div>

    <table id="jsUsers" class="table">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Rank</th>
                <th>Date Of Birth</th>
                <th>Brigade</th>
                <th>Company</th>
                <th>Platoon</th>
                @if (User.IsInRole("6"))
                {
                    <th>Action</th>
                }

            </tr>
        </thead>

        <tbody>
            @foreach (System.Data.DataRow row in Model)
            {
            <tr>
                <td>@row["Full name"]</td>
                <td>@row["Rank"]</td>
                <td>@String.Format("{0:dd-MM-yyyy}", row["Date of Birth"])</td>
                <td>@row["Brigade"]</td>
                <td>@row["Company"]</td>
                <td>@row["Platoon"]</td>
                @if (User.IsInRole("6"))
                {
                    <td>
                        <a asp-controller="User"
                           asp-action="Edits"
                           asp-route-id="@row["User_id"]">
                            Edit
                        </a>
                        <a asp-controller="User"
                           asp-action="Delete"
                           asp-route-id="@row["User_id"]"
                           onclick="return confirm('Delete User <@row["Full Name"]>')">
                            Delete
                        </a>
                    </td>
                }

            </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <th>Full Name</th>
                <th>Rank</th>
                <th>Date Of Birth</th>
                <th>Brigade</th>
                <th>Company</th>
                <th>Platoon</th>
                @if (User.IsInRole("6"))
                {
                    <th>Action</th>
                }

            </tr>
        </tfoot>


    </table>
</div>

