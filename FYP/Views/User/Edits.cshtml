@model FYP.Models.Users;

@section MoreScripts {
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
    <script language="javascript">
        $(document).ready(function () {
            $('#JSdob')
                .datetimepicker({
                    format: 'DD-MM-YYYY',
                    sideBySide: true
                });
        });
    </script>

}
<form asp-controller="User"
      asp-action="Edits"
      method="post">


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6 ">
            <h2>Edit User</h2>
        </div>
    </div>

    <input asp-for="User_id" hidden />

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="nric">NRIC  :</label>
        <div class="col-sm-5">
            <input asp-for="nric" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="nric" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="password">Password  :</label>
        <div class="col-sm-5">
            <input type="password" asp-for="password" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="full_name">Full Name  :</label>
        <div class="col-sm-5">
            <input asp-for="full_name" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="full_name" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="dob">Date of Birth :</label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSdob" data-target-input="nearest">
                <input type="text" asp-for="dob" class="form-control" />
                <div class="input-group-append" data-target="#JSdob" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="dob" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="rank">Rank :</label>
        <div class="col-sm-5">
            <select id="rank" name="rank" class="form-control">
                <option value="">-- Select One --</option>
                <option value="Recruit"> Recruit </option>
                <option value="Private"> Private </option>
                <option value="Corporal"> Corporal </option>
                <option value="Third Sergeant"> Third Sergeant</option>
                <option value="First Sergeant"> First Sergeant </option>
                <option value="Staff Sergeant"> Staff Sergeant</option>
                <option value="Master Warrant Officer"> Master Warrant Officer</option>
                <option value="Brigadier-General"> Brigadier-General</option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="rank" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="unit">Unit :</label>
        <div class="col-sm-5">
            <select id="unit" name="unit" class="form-control">
                <option value="">-- Select One --</option>
                <option value="1st Infantry Division"> 1st Infantry Division </option>
                <option value="2nd Infantry Division"> 2nd Infantry Division </option>
                <option value="1st Armored Division"> 1st Armored Division </option>
                <option value="2nd Armored Division"> 2nd Armored Division</option>
                <option value="1st Artillery Division"> 1st Artillery Division </option>
                <option value="2nd Artillery Division"> 2nd Artillery Division</option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="unit" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="company">Company :</label>
        <div class="col-sm-5">
            <select id="company" name="company" class="form-control">
                <option value="">-- Select One --</option>
                <option value="Alpha"> Alpha </option>
                <option value="Beta"> Beta </option>
                <option value="Charlie"> Charlie </option>
                <option value="Delta"> Delta</option>

            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="company" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="role">Role :</label>
        <div class="col-sm-5">
            <select id="role" name="role" class="form-control">
                <option value="">-- Select One --</option>
                <option value="Serviceman"> Serviceman</option>
                <option value="Platoon Commander"> Platoon Commander </option>
                <option value="Officer Commander"> Officer Commander </option>
                <option value="Commandant Officer"> Commandant Officer </option>
                <option value="Admin"> Admin</option>
                <option value="Store Supervisor"> Store Supervisor </option>
                <option value="Medic"> Medic </option>

            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="role" class="text-danger"></span>
        </div>
    </div>




    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @ViewData["Message"]
                </div>
            </div>
        </div>
    }



</form>
