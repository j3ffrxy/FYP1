@model FYP.Models.Users;

@section MoreScripts {
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
    <script language="javascript">
        $(document).ready(function () {
            $('#JSdob')
                .datetimepicker({
                    format: 'DD-MM-YYYY',
                    sideBySide: true
                });
        });
    </script>

}
<form asp-controller="User"
      asp-action="Edits"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6 ">
            <h2>Edit User</h2>
        </div>
    </div>

    <input asp-for="User_id" hidden />

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Brigade_id">Brigade :</label>
        <div class="col-sm-5">
            <select id="Brigade_id" name="Brigade_id" class="form-control">
                <option value="">-- Select One --</option>
                <option value="1"> A </option>
                <option value="2"> B </option>
                <option value="3"> C </option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Brigade_id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Company_id">Company :</label>
        <div class="col-sm-5">
            <select id="Company_id" name="Company_id" class="form-control">
                <option value="">-- Select One --</option>
                <option value="1"> A </option>
                <option value="2"> B </option>
                <option value="3"> C </option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Company_id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Platoon_id">Platoon :</label>
        <div class="col-sm-5">
            <select id="Platoon_id" name="Platoon_id" class="form-control">
                <option value="">-- Select One --</option>
                <option value="1"> A </option>
                <option value="2"> B </option>
                <option value="3"> C </option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Platoon_id" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="nric">NRIC  :</label>
        <div class="col-sm-5">
            <input asp-for="nric" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="nric" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="password">Password  :</label>
        <div class="col-sm-5">
            <input type="password" asp-for="password" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="full_name">Full Name  :</label>
        <div class="col-sm-5">
            <input asp-for="full_name" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="full_name" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="dob">Date of Birth :</label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSdob" data-target-input="nearest">
                <input type="text" asp-for="dob" class="form-control" />
                <div class="input-group-append" data-target="#JSdob" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="dob" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="rank">Rank :</label>
        <div class="col-sm-5">
            <select id="rank" name="rank" class="form-control">
                <option value="">-- Select One --</option>
                <option value="Recruit"> Recruit </option>
                <option value="Private"> Private </option>
                <option value="Corporal"> Corporal </option>
                <option value="Third Sergeant"> Third Sergeant</option>
                <option value="First Sergeant"> First Sergeant </option>
                <option value="Staff Sergeant"> Staff Sergeant</option>
                <option value="Master Warrant Officer"> Master Warrant Officer</option>
                <option value="Brigadier-General"> Brigadier-General</option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="rank" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Group_id">Role :</label>
        <div class="col-sm-5">
            <select id="Group_id" name="Group_id" class="form-control">
                <option value="">-- Select One --</option>
                <option value="3"> Platoon Commander </option>
                <option value="4"> Officer Commander </option>
                <option value="5"> Commandant Officer </option>
                <option value="6"> Admin</option>
                <option value="7"> Store Supervisor </option>
                <option value="8"> Serviceman</option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Group_id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @ViewData["Message"]
                </div>
            </div>
        </div>
    }



</form>
