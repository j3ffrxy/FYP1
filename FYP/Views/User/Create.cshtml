@model FYP.Models.Users;

@section MoreScripts {
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
    <script language="javascript">
        $(document).ready(function () {
            $('#JSdob')
                .datetimepicker({
                    format: 'DD-MM-YYYY',
                    sideBySide: true
                });
        });
    </script>

}
<form asp-controller="User"
      asp-action="Create"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6 ">
            <h2>Create Performance Record</h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Group_id">Rank :</label>
        <div class="col-sm-5">
            <select id = "Group_id" name= "Group_id" class=" = form-control">
                <option value= "">-- Select One --</option>
                <option value= "1"> Recruit </option>
                <option value= "2"> Corporal </option>
                <option value= "3"> Platoon Commander </option>
                <option value= "4"> Officer Commander </option>
                <option value= "5"> Commandant Officer </option>
                <option value=" 6"> Admin</option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Group_id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="full_name">Full Name  :</label>
        <div class="col-sm-5">
            <input asp-for="full_name" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="full_name" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="dob">Date of Birth :</label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSdob" data-target-input="nearest">
                <input type="text" asp-for="dob" class="form-control" />
                <div class="input-group-append" data-target="#JSdob" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="dob" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @ViewData["Message"]
                </div>
            </div>
        </div>
    }



</form>
