

<h2>Upload CSV Files</h2>

<form enctype="multipart/form-data" asp-controller="User"
      asp-action="MassAdd" method="post">

    <div class="form-group row">
        <label class="control-label col-sm-2" name="File Upload ">File Upload  :</label>
        <div class="col-sm-3">
            <input type="file" id="postedFile" name="postedFile" class="form-control" accept=".csv" />
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-3">
            <input type="submit" name="Upload" value="Submit" class="btn btn-primary" />
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-3">
            <span style="color:red;">
                @ViewBag.Message
            </span>
        </div>
    </div>
</form>