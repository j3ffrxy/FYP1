<h2>Assigning LOAs</h2>

@model FYP.Models.Users;
@section MoreScripts {
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
    <script language="javascript">
        $(document).ready(function () {
            $('#JSdate')
                .datetimepicker({
                    format: 'DD-MM-YYYY',
                    sideBySide: true
                });
        });
    </script>
    <script language="javascript">
        $(document).ready(function () {
            $('#JSdate2')
                .datetimepicker({
                    format: 'DD-MM-YYYY',
                    sideBySide: true
                });
        });
    </script>
    }

<form enctype="multipart/form-data" asp-controller="User"
      asp-action="AssignLOA" method="post">

    <div class="form-group row">
        <label class="control-label col-sm-2" name="File Upload ">File Upload  :</label>
        <div class="col-sm-3">
            <input type="file" id="postedFile" name="postedFile" class="form-control" accept=".csv" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="loa_start_date">Start Date: </label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSdate" data-target-input="nearest">
                <input type="text" asp-for="loa_start_date" class="form-control" />
                <div class="input-group-append" data-target="#JSdate" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="loa_start_date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="loa_end_date">End Date: </label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSdate2" data-target-input="nearest">
                <input type="text" asp-for="loa_end_date" class="form-control" />
                <div class="input-group-append" data-target="#JSdate2" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="loa_end_date" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-3">
            <input type="submit" name="Upload" value="Submit" class="btn btn-primary" />
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-3">
            <span style="color:red;">
                @ViewBag.Message
            </span>
        </div>
    </div>


</form>