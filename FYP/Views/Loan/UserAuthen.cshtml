@model FYP.Models.Users;


<form asp-controller="Loan"
      asp-action="UserAuthen"
      method="post">


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6 ">
            <h2>User Authentication</h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="nric">NRIC  :</label>
        <div class="col-sm-5">
            <input asp-for="nric" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="nric" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="password">Password  :</label>
        <div class="col-sm-5">
            <input type="password" asp-for="password" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="password" class="text-danger"></span>
        </div>
    </div>




    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @ViewData["Message"]
                </div>
            </div>
        </div>
    }



</form>
