@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#jsExercise').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                pageLength: 20
            });
        });
    </script>

}

@model List<FYP.Models.Exercise>;
<h2> Loans </h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<div>

    <table id="jsExercise" class="table">
        <thead>
            <tr>
                <th>SAF11B</th>
                <th>Company</th>
                <th>Unit</th>
                <th>Package</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                @if (User.IsInRole("Admin"))
                {
                    <th>Action</th>
                }

            </tr>
        </thead>

        <tbody>
            @foreach (FYP.Models.Exercise e in Model)
            {
            <tr>
                <td>@e.nric</td>
                <td>@e.company</td>
                <td>@e.unit</td>
                <td>@e.Package_id</td>
                <td>@e.description</td>
                <td>@String.Format("{0:dd-MM-yyyy}", @e.start_date)</td>
                <td>@String.Format("{0:dd-MM-yyyy}", @e.end_date)</td>
                <td>@e.status</td>
                <td>
                    <a asp-controller="Exercise"
                       asp-action="Delete"
                       asp-route-id="@e.Exercise_id"
                       onclick="return confirm('Delete Exercise')">
                        Delete
                    </a>
                </td>


            </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <th>SAF11B</th>
                <th>Company</th>
                <th>Unit</th>
                <th>Package</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                @if (User.IsInRole("Admin"))
                {
                    <th>Action</th>
                }

            </tr>
        </tfoot>


    </table>
</div>

