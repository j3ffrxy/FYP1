@model FYP.Models.Equipment_Accessories;

@section MoreScripts {
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script language="javascript">
        $(document).ready(function () {
            $('#JSdate')
                .datetimepicker({
                    format: 'DD-MM-YYYY',
                    sideBySide: true
                });
        });
    </script>
}
<form asp-controller="Accessories"
      asp-action="AddAccessories"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-0 col-sm-6 ">
            <h2>Add Accessories</h2>
        </div>
    </div>
   
    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Accessories_details">Equipment Name :</label>
        <div class="col-sm-5">
            <input asp-for="Accessories_details" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Accessories_details" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Storage_location">Storage Location:</label>
        <div class="col-sm-4">
            <select asp-for="Storage_location" class="form-control">
                <option value="">--- Select ---</option>
                <option value="Store A">Store A</option>
                <option value="Store B">Store B</option>

            </select>
        </div>

        <div class="col-sm-4">
            <span asp-validation-for="Storage_location" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Quantity">Quantity :</label>
        <div class="col-sm-5">
            <input asp-for="Quantity" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData[" MsgType"]">
                    <text>@Html.Raw(ViewData["Message"])</text>
                </div>
            </div>
        </div>
    }

</form>
