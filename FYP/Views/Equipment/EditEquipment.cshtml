@model FYP.Models.equipment;

@section MoreScripts {
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script language="javascript">
        function SetOne() {
            var qty = $("#Quantity").val();

            if ($("#Serial_id").val().trim().length > 0) {
                5
                $("#Quantity").val(1);
                $('#Quantity').attr('readonly', true);

            } else {
                $('#Quantity').attr('readonly', false);
                $("#Quantity").val(qty);

            }
        }

        $(document).ready(function () {
            if ($("#Serial_id").val().trim().length > 0) {
                $('#Quantity').attr('readonly', true);
            }
            else {
                $('#Quantity').attr('readonly', false);
            }
            $("#Serial_id").change(SetOne);
        });
    </script>
}

<form asp-controller="Equipment"
      asp-action="EditEquipment"
      method="post">
    <input hidden asp-for="Equipment_id" />
    <div class="form-group row">
        <div class="offset-sm-0 col-sm-6 ">
            <h2>Edit Equipment</h2>
        </div>
    </div>
    <input asp-for="Equipment_id" hidden />
    <input asp-for="Serial_id" hidden />
    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Equipment_name">Equipment Name :</label>
        <div class="col-sm-5">
            <input asp-for="Equipment_name" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Equipment_name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Storage_location">Storage Location:</label>
        <div class="col-sm-4">
            <select asp-for="Storage_location" class="form-control">
                <option value="">--- Select ---</option>
                <option value="Warehouse A">Store A</option>
                <option value="Warehouse B">Store B</option>
            </select>
        </div>

        <div class="col-sm-4">
            <span asp-validation-for="Storage_location" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Quantity">Quantity :</label>
        <div class="col-sm-5">
            <input asp-for="Quantity" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>




    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@Html.Raw(ViewData["Message"])</text>
                </div>
            </div>
        </div>
    }

</form>
