@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#jsActivity').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                pageLength: 20
            });
        });
    </script>

}
<h2>Inventory List</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">@TempData["Message"]</div>
}

<table id="jsMovieTable" class="table">
    <thead>
        <tr>
            <th scope="col">Equipment ID</th>
            <th scope="col">Equipment Name</th>
            <th scope="col">Storage Location</th>
            <th scope="col">Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow row in Model)
        {

            <tr>
                <td>@row["Equipment_id"]</td>
                <td>@row["Equipment_name"]</td>
                <td>@row["Storage_location"]</td>
                <td>@row["Quantity"]</td>

                @if (!User.IsInRole("3"))
                {
                    <td>
                        <a asp-controller="Equipment"
                           asp-action="EditEquipment"
                           asp-route-id="@row["Equipment_id"]">
                            Edit
                        </a>
                        @if (User.IsInRole("1"))
                        {
                            <text> |</text>
                            <a asp-controller="Equipment" asp-action="DeleteEquipment" asp-route-id="@row["Equipment_id"]" onclick="return confirm('Are you sure you want to delete: @row["Equipment_id"]?')">Delete</a>

                        }

                    </td>
                }





            </tr>


        }
    </tbody>
</table>
