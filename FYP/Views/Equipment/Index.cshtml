@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#jsEquipment').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                pageLength: 20
            });
        });
    </script>

}
<h2>Inventory List</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">@TempData["Message"]</div>
}
<div>
    <table id="jsEquipment" class="table">
        <thead>
            <tr>
                <th scope="col">Serial Number</th>
                <th scope="col">Equipment Name</th>
                <th scope="col">Storage Location</th>
                <th scope="col">Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow row in Model)
            {

                <tr>
                    <td>@row["Serial_no"]</td>
                    <td>@row["Equipment_name"]</td>
                    <td>@row["Storage_location"]</td>
                    <td>@row["Quantity"]</td>

                    @if (!User.IsInRole("Admin"))
                    {
                        <td>
                            <a asp-controller="Equipment"
                               asp-action="EditEquipment"
                               asp-route-id="@row["Serial_no"]">
                                Edit
                            </a>
                            <a asp-controller="Equipment"
                               asp-action="DeleteEquipment"
                               asp-route-id="@row["Serial_no"]"
                               onclick="return confirm('Delete Equipment')">
                                Delete
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <text> |</text>
                                <a asp-controller="Equipment" asp-action="DeleteEquipment" asp-route-id="@row["Serial_no"]" onclick="return confirm('Are you sure you want to delete: @row["Serial_no"]?')">Delete</a>

                            }

                        </td>
                    }

                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
<th>Serial Number</th>
        <th>Equipment Name</th>
        <th>Storage Location</th>
        <th>Quantity</th>
       </tr>
                </tfoot>
        
    </table>
    </div>
