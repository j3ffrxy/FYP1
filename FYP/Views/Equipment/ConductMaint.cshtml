@model FYP.Models.Equipment;

@section MoreScripts {
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script language="javascript">
        $(document).ready(function () {
            $('#JSdate')
                .datetimepicker({
                    format: 'DD-MM-YYYY',
                    sideBySide: true
                });
        });
    </script>
    <script language="javascript">
        $(document).ready(function () {
            $('#JSdate2')
                .datetimepicker({
                    format: 'DD-MM-YYYY',
                    sideBySide: true
                });
        });
    </script>
}

<form asp-controller="Equipment"
      asp-action="ConductMaint"
      method="post">
    <div class="form-group row">
        <div class="offset-sm-0 col-sm-6 ">
            <h2>Maintenance</h2>
        </div>
    </div>

    <input asp-for="Serial_no" hidden />
    <input asp-for="Equipment_name" hidden />
    <input asp-for="Storage_location" hidden />
    <input asp-for="Type_desc" hidden />
    <input asp-for="Status" hidden />
    <input asp-for="Assigned" hidden />

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="m_start_date">Start Date: </label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSdate" data-target-input="nearest">
                <input type="text" asp-for="m_start_date" class="form-control" />
                <div class="input-group-append" data-target="#JSdate" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="m_start_date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="m_end_date">End Date: </label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSdate2" data-target-input="nearest">
                <input type="text" asp-for="m_end_date" class="form-control" />
                <div class="input-group-append" data-target="#JSdate2" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="m_end_date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@Html.Raw(ViewData["Message"])</text>
                </div>
            </div>
        </div>
    }

</form>
