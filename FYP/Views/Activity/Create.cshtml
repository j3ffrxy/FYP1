@model FYP.Models.Activity;

@section MoreScripts {
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
    <script language="javascript">
        $(document).ready(function () {
            $('#JSdate')
                .datetimepicker({
                    format: 'DD-MM-YYYY',
                    sideBySide: true
                });
        });
    </script>

}
<form asp-controller="Activity"
      asp-action="Create"
      method="post">


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6 ">
            <h2>Create Training Session</h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Platoon_id">Platoon: </label>
        <div class="col-sm-5">
            <select id="Platoon_id" name="Platoon_id" class="form-control">
                <option value="">-- Select One --</option>
                <option value="1"> A </option>
                <option value="2"> B </option>
                <option value="3"> C </option>
                <option value="4"> N </option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Platoon_id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Company_id">Company: </label>
        <div class="col-sm-5">
            <select id="Company_id" name="Company_id" class="form-control">
                <option value="">-- Select One --</option>
                <option value="1"> A </option>
                <option value="2"> B </option>
                <option value="3"> C </option>
                <option value="4"> N </option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Company_id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Brigade_id">Brigade: </label>
        <div class="col-sm-5">
            <select id="Brigade_id" name="Brigade_id" class="form-control">
                <option value="">-- Select One --</option>
                <option value="1"> A </option>
                <option value="2"> B </option>
                <option value="3"> C </option>
                <option value="4"> N </option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Brigade_id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="type">Activity Type: </label>
        <div class="col-sm-5">
            <input type="text" asp-for="type" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="type" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="activity_description">Description: </label>
        <div class="col-sm-5">
            <input type="text" asp-for="activity_description" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="activity_description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="activity_date">Date: </label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSdate" data-target-input="nearest">
                <input type="text" asp-for="activity_date" class="form-control" />
                <div class="input-group-append" data-target="#JSdate" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="activity_date" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @ViewData["Message"]
                </div>
            </div>
        </div>
    }



</form>
