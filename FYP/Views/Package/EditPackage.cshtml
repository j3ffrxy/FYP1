@model FYP.Models.Package;

@section MoreScripts {
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script language="javascript">
        $(document).ready(function () {
            $('#JSdate')
                .datetimepicker({
                    format: 'DD-MM-YYYY',
                    sideBySide: true
                });
        });
    </script>
}
<form asp-controller="Package"
      asp-action="EditPackage"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-0 col-sm-6 ">
            <h2>Edit Package</h2>
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Serial_no">Equipment serial number :</label>
        <div class="col-sm-5">
            <input asp-for="Serial_no" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Serial_no" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Equipment_accessories_id">Equipment accessories id :</label>
        <div class="col-sm-5">
            <input asp-for="Equipment_accessories_id" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Equipment_accessories_id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Name">Package Name :</label>
        <div class="col-sm-5">
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData[" MsgType"]">
                    <text>@Html.Raw(ViewData["Message"])</text>
                </div>
            </div>
        </div>
    }

</form>
