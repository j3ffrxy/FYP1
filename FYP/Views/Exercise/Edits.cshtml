@model FYP.Models.Exercise;

@section MoreScripts {
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
    <script language="javascript">
        $(document).ready(function () {
            $('#JSdate')
                .datetimepicker({
                    format: 'DD-MM-YYYY',
                    sideBySide: true
                });
        });
    </script>
    <script language="javascript">
        $(document).ready(function () {
            $('#JSdate2')
                .datetimepicker({
                    format: 'DD-MM-YYYY',
                    sideBySide: true
                });
        });
    </script>

}
<form asp-controller="Exercise"
      asp-action="Edits"
      method="post">


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6 ">
            <h2>Edit Exercise</h2>
        </div>
    </div>

    <input asp-for="Exercise_id" hidden />

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="company">Company: </label>
        <div class="col-sm-5">
            <select id="company" name="company" class="form-control">
                <option value="">-- Select One --</option>
                <option value="1"> A </option>
                <option value="2"> B </option>
                <option value="3"> C </option>
                <option value="4"> N </option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="company" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="unit">Unit: </label>
        <div class="col-sm-5">
            <select id="unit" name="unit" class="form-control">
                <option value="">-- Select One --</option>
                <option value="1"> A </option>
                <option value="2"> B </option>
                <option value="3"> C </option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="unit" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Package_id">Package: </label>
        <div class="col-sm-5">
            <select id="Package_id" name="Package_id" class="form-control">
                <option value="">-- Select One --</option>
                <option value="1"> Field Training Pack (SAR-21 w/ Pistol & Accessories) </option>
                <option value="2"> Marksman Practice (SAR-21 w/ Mag) </option>
                <option value="3"> Target Practice (Revolver) </option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Package_id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="description">Description: </label>
        <div class="col-sm-5">
            <input type="text" asp-for="description" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="start_date">Start Date: </label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSdate" data-target-input="nearest">
                <input type="text" asp-for="start_date" class="form-control" />
                <div class="input-group-append" data-target="#JSdate" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="start_date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="end_date">End Date: </label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSdate2" data-target-input="nearest">
                <input type="text" asp-for="end_date" class="form-control" />
                <div class="input-group-append" data-target="#JSdate2" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="end_date" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @ViewData["Message"]
                </div>
            </div>
        </div>
    }



</form>
