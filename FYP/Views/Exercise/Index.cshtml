@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#jsExercise').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                pageLength: 20
            });
        });
    </script>

}

@model System.Data.DataRowCollection
<h2> Exercises </h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<div>

    <table id="jsExercise" class="table">
        <thead>
            <tr>
                <th>Exercise No.</th>
                <th>SAF11B</th>
                <th>Company</th>
                <th>Unit</th>
                <th>Package</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                @if (User.IsInRole("6"))
                {
                    <th>Action</th>
                }

            </tr>
        </thead>

        <tbody>
            @foreach (System.Data.DataRow row in Model)
            {
            <tr>
                <td>@row["Exercise_id"]</td>
                <td>@row["nric"]</td>
                <td>@row["Company"]</td>
                <td>@row["Unit"])</td>
                <td>@row["Package"]</td>
                <td>@row["Description"]</td>
                <td>@String.Format("{0:dd-MM-yyyy}", row["Start Date"])</td>
                <td>@String.Format("{0:dd-MM-yyyy}", row["End Date"])</td>
                <td>
                    <a asp-controller="Exercise"
                       asp-action="Edits"
                       asp-route-id="@row["Exercise_id"]">
                        Edit
                    </a>
                    <a asp-controller="Exercise"
                       asp-action="Delete"
                       asp-route-id="@row["Exercise_id"]"
                       onclick="return confirm('Delete Exercise')">
                        Delete
                    </a>
                    <a asp-controller="Exercise"
                       asp-action="Archive"
                       asp-route-id="@row["Exercise_id"]"
                       onclick="return confirm('Archive Exercise')">
                        Archive
                    </a>
                </td>


            </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <th>Exercise No.</th>
                <th>SAF11B</th>
                <th>Company</th>
                <th>Unit</th>
                <th>Package</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                @if (User.IsInRole("6"))
                {
                    <th>Action</th>
                }

            </tr>
        </tfoot>


    </table>
</div>

