<h2>Upload CSV Files for stocktake</h2>

@model FYP.Models.Stocktaking;

<form enctype="multipart/form-data" asp-controller="Stocktake"
      asp-action="AddStocktake" method="post">

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="storage_location">Store :</label>
        <div class="col-sm-5">
            <select id="storage_location" name="storage_location" class="form-control">
                <option value="">-- Select One --</option>
                <option value="Store A"> Store A </option>
                <option value="Store B"> Store B </option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="storage_location" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group row">
        <label class="control-label col-sm-2" name="File Upload ">File Upload  :</label>
        <div class="col-sm-3">
            <input type="file" id="postedFile" name="postedFile" class="form-control" accept=".csv" />
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-3">
            <input type="submit" name="Upload" value="Submit" class="btn btn-primary" />
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-3">
            <span style="color:red;">
                @ViewBag.Message
            </span>
        </div>
    </div>
</form>