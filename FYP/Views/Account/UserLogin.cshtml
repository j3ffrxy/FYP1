@model FYP.Models.UserLogin;


<form asp-controller="Account"
      asp-action="Login"
      method="post">
    <h2 class="form-signin-heading">Please Sign In</h2>
    <div class="col-sm-5">

        <div class="form-group row">
            <label asp-for="nric" class="control-label">NRIC: </label>
            <input asp-for="nric" class="form-control" />
            <span asp-validation-for="nric" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="password" class="control-label">Password: </label>
            <input asp-for="password" class="form-control" />
            <span asp-validation-for="password" class="text-danger"></span>
        </div>

        <div class="form-group-row">
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">
                    Remember Me
                </label>
            </div>
        </div>


        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
        }



        <div class="form-group row">
            <input type="submit" class="btn btn-primary" value="Login" />
        </div>

    </div>

</form>

