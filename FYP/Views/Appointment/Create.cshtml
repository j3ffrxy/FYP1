@model FYP.Models.Appointment;

@section MoreScripts {
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
    <script language="javascript">
        $(document).ready(function () {
            $('#JSdate')
                .datetimepicker({
                    format: 'DD-MM-YYYY',
                    sideBySide: true
                });
        });
    </script>

}
<form asp-controller="Appointment"
      asp-action="Create"
      method="post">


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6 ">
            <h2>Create Appointment</h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Equipment_id">Equipment: </label>
        <div class="col-sm-5">
            <select id="Equipment_id" name="Equipment_id" class="form-control">
                <option value="">-- Select One --</option>
                <option value="8"> Rifle </option>
                <option value="10"> SAR-21 </option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Equipment_id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Activity_id">Activity: </label>
        <div class="col-sm-5">
            <select id="Activity_id" name="Activity_id" class="form-control">
                <option value="">-- Select One --</option>
                <option value="10"> Activity 1 </option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Activity_id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="nric">SAF11B: </label>
        <div class="col-sm-5">
            <input type="text" asp-for="nric" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="nric" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="date">Date: </label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSdate" data-target-input="nearest">
                <input type="text" asp-for="date" class="form-control" />
                <div class="input-group-append" data-target="#JSdate" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="quantity">Quantity: </label>
        <div class="col-sm-5">
            <input type="text" asp-for="quantity" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="appt_desc">Description: </label>
        <div class="col-sm-5">
            <input type="text" asp-for="appt_desc" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="appt_desc" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="status">Status: </label>
        <div class="col-sm-5">
            <input type="text" asp-for="status" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="status" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @ViewData["Message"]
                </div>
            </div>
        </div>
    }



</form>
