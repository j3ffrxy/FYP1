<!DOCTYPE html>
<html>
<head>
    <title>
        HTML Webcam Capture Demo
    </title>
    <meta name="viewport" content="width=device-width" />
    <title>Where We Were</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/Webcam.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <style>
        #vid-show, #vid-canvas, #vid-take {
            width: 150%;
            height: 45%;
            margin-left: 280px;
        }

        html, body {
            padding: 0;
            margin: 0;
        }

        h1 {
            margin-left: 300px;
            font-size: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Facial Authentication</h1>
        <div style="height:10px;font-size:8px;right:700px;">
            @if (TempData["Message"] != null)
            {
                <div class="form-group row">
                    <div class="alert alert-@TempData["MsgType"]">
                        <text>@TempData["Message"]</text>
                    </div>
                </div>
            }
        </div>

        <div id="vid-controls" class="col-sm-4">
            <video id="vid-show" autoplay width="300" height="300"></video>
            <input id="vid-take" type="button" value="Login" class="btn btn-primary" style="font-weight:bold" />
            <div id="vid-canvas"></div>
            <style>
            </style>
        </div>
    </div>

</body>
</html>